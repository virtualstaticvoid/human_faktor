<%% title "<%= human_name.pluralize.capitalize %>" %>

<table class="table_grid">
  <thead>
    <tr>
<% attributes.each do |attribute|
  next if attribute.name == "account_id" -%>      <th><%= attribute.human_name %></th>
<% end -%>
      <th width="60px"></th>
      <th width="60px"></th>
      <th width="60px"></th>
    </tr>
  </thead>
  <tbody id="data-rows">
<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <tr>
<% attributes.each do |attribute|
  next if attribute.name == "account_id" -%>      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
      <td><%%= link_to 'Show', <%= singular_table_name %> %></td>
      <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
      <td><%%= link_to 'Destroy', <%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
<%% end %>
  </tbody>
</table>

<br />

<%%= link_to 'New <%= human_name.capitalize %>', new_<%= singular_table_name %>_path %>
