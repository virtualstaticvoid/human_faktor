<% title "Subscriptions" %>

<table class="table_grid">
  <thead>
    <tr>
      <th rowspan="2" style="text-align: left; padding-left: 8px;"><span>Subscription Plan</span></th>
      <th rowspan="2" width="150px">Max Employees</th>
      <th width="150px">Monthly Price</th>
      <th width="150px">1 Year Price</th>
      <th width="150px">3 Year Price</th>
    </tr>  
    <tr>
      <td align="center" style="border: none; background: #F0F0F0; font-size: 10pt;">Paid Monthly</td>
      <td align="center" style="border: none; background: #F0F0F0; font-size: 10pt;">Paid Annually</td>
      <td align="center" style="border: none; background: #F0F0F0; font-size: 10pt;">Paid Annually</td>
    </tr>
  </thead>
  <tbody>
    <% [['Small', 25], 
        ['Small-Medium', 50], 
        ['Medium', 100], 
        ['Medium-Large', 150],
        ['Large', 300],
        ['Enterprise', 500],
        ['Enterprise+', 1000]].each do |plan| %>  
  
      <tr>
        <td style="padding-left: 12px;"><%= plan[0] %></td>
        <td align="center" style="text-align: center;"><%= plan[1] %></td>
        <td align="right" style="text-align: right;"><%= number_to_currency(@subscriptions.where(:max_employees => plan[1], :duration => 1).first.price, :unit => 'R ') %></td>
        <td align="right" style="text-align: right;"><%= number_to_currency(@subscriptions.where(:max_employees => plan[1], :duration => 12).first.price, :unit => 'R ') %></td>
        <td align="right" style="text-align: right !important;"><%= number_to_currency(@subscriptions.where(:max_employees => plan[1], :duration => 36).first.price, :unit => 'R ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
