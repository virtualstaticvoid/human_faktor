<% title "#{current_account} - Forgotten Password" %>

<div style="height: 100px;">
</div>

<div class="row">

  <div class="column grid_3">
  </div>

  <div class="column grid_6">
  
    <div class="panel_box box_radius">
      
      <div class="panel_box_title box_radius_top background_4">
        <h2><%= current_account.title %> - Forgotten Password</h2>
      </div>
      
      <div class="panel_box_content">

        <div>
          <%= render :partial => "shared/flash", :locals => { :flash => flash } %>
        </div>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

          <%= error_messages_for resource %>
          
          <div class="field">
            <div><%= f.label :email %></div>
            <span><%= f.text_field :email %></span>
            <span class="field_info"></span>
          </div>
          
          <div style="height: 52px;">
            <span style="float: left; padding-top: 8px;">
              <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
              <%= link_to "Sign In", new_session_path(resource_name) %>
            </span>
            <span style="float: right; margin-top: 11px;">
              <%= f.submit "Send Instructions" %>
            </span>
          </div>

        <% end %>      
      
      </div>
    </div>
  </div>

  <div class="column grid_3">
  </div>

</div>

