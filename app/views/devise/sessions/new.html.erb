<% title "#{current_account} - Sign In" %>

<div style="height: 100px;">
</div>

<div class="row">

  <div class="column grid_3">
  </div>

  <div class="column grid_6">
  
    <div class="panel_box box_radius box_shadow">
      
      <div class="panel_box_title box_radius_top background_4">
        <h2><%= current_account.nil? ? 'Administration' : current_account.title %> - Sign In</h2>
      </div>
      
      <div class="panel_box_content">

        <div>
          <%= render :partial => "shared/flash", :locals => { :flash => flash } %>
        </div>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        
          <%= error_messages_for resource %>

          <div class="field required">
            <div><%= f.label :user_name %></div>
            <span><%= f.text_field :user_name, :autofocus => 'autofocus' %></span>
          </div>
          <div class="field required">
            <div><%= f.label :password %></div>
            <span><%= f.password_field :password %></span>
          </div>
          <div class="field">
            <span><%= f.check_box :remember_me %></span>
            <span><%= f.label :remember_me %></span>
          </div>
          
          <div style="height: 52px;">
            <span style="float: left; padding-top: 8px;">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
            </span>
            <span style="float: right; margin-top: 11px;">
              <%= f.submit "Sign in" %> or <%= link_to 'cancel', root_path %>
            </span>
          </div>

        <% end %>      
      
      </div>
    </div>
  </div>

  <div class="column grid_3">
  </div>

</div>

