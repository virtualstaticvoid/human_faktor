<tr id="_employee_<%= employee.to_param %>" style="<% unless employee.active %>text-decoration: line-through;<% end %>">
  <td><%= employee.full_name %></td>
  <td><%= employee.designation %></td>
  <td><%= t(employee.role_sym, :scope => :roles) %></td>
  <td><%= employee.location %></td>
  <td><%= employee.department %></td>
  <td><%= employee.approver %></td>
  <td>
    <%= mail_to(employee.email, image_tag('mail.png'), :class => "grid_button") if employee.email.present? %>
  </td>
  <td><%= link_to image_tag('employee.png', :width => '16px', :height => '16px'), 
                  impersonate_path(employee.to_param), 
                  :title => 'Impersonate Employee',
                  :class => "grid_button" %></td>
</tr>