<%

  columns = ['employee']

  @leave_types.each do |leave_type|
    columns << leave_type.to_s.downcase
  end

%><%= columns.join(',').html_safe %>
<% for employee in @filter.employees %><%
  summary = @filter.summary_for(employee)

  data = [employee.full_name]

  @leave_types.each do |leave_type|
    data << summary[leave_type.id] || 0
  end

%><%= data.join(',').html_safe %>
<% end %>