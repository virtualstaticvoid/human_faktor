<div class="dashboard_panel">
  <div class="dashboard_panel_header box_radius_top background_5">
    Pending Staff Leave Requests
  </div>
  <div class="dashboard_panel_content">
    <% if @dashboard.pending_staff_leave_requests.count() > 0 %>
      <ul>
        <% for leave_request in @dashboard.pending_staff_leave_requests %>
          <%= render 'tenant/leave_requests/dashboard_item', :leave_request => leave_request %>
        <% end %>    
      </ul>
    <% else %>
      <em>None found.</em>    
    <% end %>
  </div>
  <div class="dashboard_panel_footer">
    <%= link_to 'More', staff_leave_requests_path(:status => LeaveRequest::STATUS_PENDING) %>
  </div>
</div>
