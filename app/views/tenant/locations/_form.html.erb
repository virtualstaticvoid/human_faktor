<%= form_for(@location, :url => @location.persisted? ? location_path(@location, :tenant => current_account.subdomain) : locations_path) do |f| %>

  <%= error_messages_for @location %>

  <div class="field">
    <div><%= f.label :title %></div>
    <span><%= f.text_field :title %></span>
    <span class="field_info"></span>
  </div>

  <div class="actions">
    <%= f.submit %> or <%= link_to 'cancel', locations_path %>
  </div>
  
<% end %>

