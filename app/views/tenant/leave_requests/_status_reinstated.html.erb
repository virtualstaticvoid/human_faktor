<p>The <%= @leave_request.leave_type.to_s.downcase %> leave request for <strong><%= @leave_request.employee %></strong> is <strong>reinstated</strong>!</p>

<%= render :partial => 'leave_request_detail', :locals => { :leave_request => @leave_request } %>
<%= render :partial => 'leave_request_constraints', :locals => { :leave_request => @leave_request } %>

<% if @leave_request.can_cancel?(current_employee) %>

  <%= form_for @leave_request, :url => cancel_leave_request_path(@leave_request, :tenant => current_account.subdomain) do |f| %>

    <div class="actions">
      <%= f.submit 'Cancel Leave' %>
    </div>

  <% end %>

<% end %>

