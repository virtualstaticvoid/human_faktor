<tr id="_employee_<%= employee.to_param %>" data-url="<%= edit_employee_path(:tenant => current_account.subdomain, :id => employee.to_param) %>">
  <td><%= image_tag(employee.avatar.url(:avatar), :width => 24, :height => 24, :class => 'avatar boxradius') %></td>
  <td><%= employee.full_name %></td>
  <td><%= mail_to employee.email %></td>
  <td><%= employee.approver %></td>
  <td><%= employee.designation %></td>
  <td><%= employee.role %></td>
  <td><%= employee.location %></td>
  <td><%= employee.department %></td>
  <td class="boolean"><%= employee.active %></td>
  <td><%= link_to image_tag('delete.png'), employee_path(:tenant => current_account.subdomain, :id => employee.to_param), :method => :delete, :remote => true, :confirm => 'Are you sure?', :class => "delete_button" %></td>
</tr>

